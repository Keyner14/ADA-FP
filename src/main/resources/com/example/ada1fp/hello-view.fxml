<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ada1fp.controllers.HelloController" spacing="10">
   <padding>
      <Insets top="10" right="10" bottom="10" left="10"/>
   </padding>

   <Text text="Gestor de Tareas" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

   <GridPane hgap="10" vgap="10">
      <columnConstraints>
         <ColumnConstraints halignment="RIGHT" minWidth="100"/>
         <ColumnConstraints halignment="LEFT" minWidth="200"/>
      </columnConstraints>

      <Label text="Descripción:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="descriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

      <Label text="Prioridad:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
      <ComboBox fx:id="priorityComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

      <Label text="Fecha vencimiento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
      <DatePicker fx:id="expirationDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

      <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
         <Button text="Agregar Tarea" onAction="#onAddTaskClick"/>
      </HBox>
   </GridPane>

   <Separator/>

   <GridPane hgap="10" vgap="10">
      <columnConstraints>
         <ColumnConstraints halignment="RIGHT" minWidth="100"/>
         <ColumnConstraints halignment="LEFT" minWidth="200"/>
      </columnConstraints>

      <Label text="Buscar por ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="searchIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
      <Button text="Buscar" onAction="#onSearchTaskClick" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
   </GridPane>

   <Separator/>

   <GridPane hgap="10" vgap="10">
      <columnConstraints>
         <ColumnConstraints halignment="RIGHT" minWidth="100"/>
         <ColumnConstraints halignment="LEFT" minWidth="200"/>
      </columnConstraints>

      <Label text="Completar por ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="completeByIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
      <Button text="Completar tarea por ID" onAction="#onCompleteTaskByIdClick" GridPane.rowIndex="1" GridPane.columnIndex="1" />
   </GridPane>

   <Separator/>

   <HBox spacing="10">
      <Button text="Mostrar tarea más prioritaria" onAction="#onShowHighestPriorityTaskClick"/>
      <Button text="Completar tarea más prioritaria" onAction="#onCompleteHighestPriorityTaskClick"/>
   </HBox>

   <Separator/>

   <TextArea fx:id="outputArea" editable="false" style="-fx-font-family: monospace;" VBox.vgrow="ALWAYS"/>
</VBox>